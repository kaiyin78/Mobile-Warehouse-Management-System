<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ReceiveProductDetails">


                <TextView
                    android:id="@+id/lblPartNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@mipmap/productno_icon"
                    android:ems="10"
                    android:gravity="center|right"
                    android:hint="Example : P001"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/fontdisplaytext"
                    android:textColorHint="#756c83"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.313"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/textView25" />

                <EditText
                    android:id="@+id/lblProductName"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@mipmap/productname_icon"
                    android:ems="10"
                    android:hint="Example : Nike-X1"
                    android:inputType="textPersonName"
                    android:numeric="integer"
                    android:textColorHint="#756c83"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.308"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/textView27" />

                <EditText
                    android:id="@+id/lblQuantity"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@mipmap/productquantity_icon"
                    android:ems="10"
                    android:hint="Example : 10"
                    android:inputType="number"
                    android:textColorHint="#756c83"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.313"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="124dp"
                    android:text="Done"
                    android:textAppearance="@style/fontdisplaytext"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.464"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/lblQuantity"
                    app:layout_constraintVertical_bias="0.884" />

                <EditText
                    android:id="@+id/lblSerialNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:drawableLeft="@mipmap/serialno_icon"
                    android:ems="10"
                    android:hint="Example : S1001"
                    android:inputType="textPersonName"
                    android:textColorHint="#756c83"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.313"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/textView26" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="209dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="24dp"
                    android:text="Product Part No"
                    android:textAppearance="@style/fontdisplaytext2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="209dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp"
                    android:text="Product Serial No"
                    android:textAppearance="@style/fontdisplaytext2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/lblPartNo" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="209dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp"
                    android:text="Product Name"
                    android:textAppearance="@style/fontdisplaytext2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/lblSerialNo" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="209dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp"
                    android:text="Product Quantity"
                    android:textAppearance="@style/fontdisplaytext2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/lblProductName" />

                <ImageButton
                    android:id="@+id/imgbtnScanSerialNo"
                    android:layout_width="43dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="@+id/lblSerialNo"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textView26"
                    app:layout_constraintTop_toTopOf="@+id/textView26"
                    app:srcCompat="@mipmap/qrscanner_icon" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="6dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
