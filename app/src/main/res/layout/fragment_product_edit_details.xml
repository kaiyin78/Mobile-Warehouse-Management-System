<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductEditDetails">

    <TextView
        android:id="@+id/tvEditDetailsSerialNo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:drawableLeft="@mipmap/serialno_icon"
        android:gravity="center|left"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textAppearance="@style/fontdisplaytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/productDetailPartNo2" />

    <TextView
        android:id="@+id/productDetailPartNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product Part No"
        android:textAppearance="@style/fontdisplaytext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productDetailPartNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product Serial No"
        android:textAppearance="@style/fontdisplaytext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/tvEditDetailsPartNo" />

    <TextView
        android:id="@+id/productDetailPartNo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product Name"
        android:textAppearance="@style/fontdisplaytext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/tvEditDetailsSerialNo" />

    <TextView
        android:id="@+id/productDetailPartNo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product Quantity"
        android:textAppearance="@style/fontdisplaytext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/tvEditDetailsProductName" />

    <Button
        android:id="@+id/btnEditDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditDetailsQuantity"
        app:layout_constraintVertical_bias="0.895" />

    <TextView
        android:id="@+id/tvEditDetailsPartNo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableLeft="@mipmap/productno_icon"
        android:ems="10"
        android:focusable="false"
        android:gravity="center|left"
        android:textAppearance="@style/fontdisplaytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailPartNo" />

    <EditText
        android:id="@+id/tvEditDetailsProductName"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:drawableLeft="@mipmap/productname_icon"
        android:ems="10"
        android:gravity="center|left"
        android:hint="add"
        android:inputType="textPersonName"
        android:textAppearance="@style/fontdisplaytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/productDetailPartNo3" />

    <EditText
        android:id="@+id/tvEditDetailsQuantity"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:drawableLeft="@mipmap/productquantity_icon"
        android:ems="10"
        android:gravity="center|left"
        android:inputType="textPersonName"
        android:textAppearance="@style/fontdisplaytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/productDetailPartNo4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>